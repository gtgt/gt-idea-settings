<application>
  <component name="ApplicationTasksOptions">
    <TaskOptions isEnabled="true">
      <option name="arguments" value="--no-color less/style.less css/style.css" />
      <option name="checkSyntaxErrors" value="true" />
      <option name="description" value="Compiles .less files into .css files" />
      <option name="exitCodeBehavior" value="ERROR" />
      <option name="fileExtension" value="less" />
      <option name="immediateSync" value="true" />
      <option name="name" value="LESS" />
      <option name="output" value="css" />
      <option name="outputFilters">
        <array>
          <FilterInfo>
            <option name="description" value="lessc error format" />
            <option name="name" value="lessc" />
            <option name="regExp" value="$MESSAGE$$FILE_PATH$?:$LINE$:$COLUMN$" />
          </FilterInfo>
        </array>
      </option>
      <option name="outputFromStdout" value="false" />
      <option name="passParentEnvs" value="true" />
      <option name="program" value="$USER_HOME$/bin/lessc" />
      <option name="scopeName" value="Project Files" />
      <option name="trackOnlyRoot" value="false" />
      <option name="workingDir" value="$ProjectFileDir$/sites/default/themes/digi" />
      <envs />
    </TaskOptions>
    <TaskOptions isEnabled="true">
      <option name="arguments" value="--no-color less/style.less css/style.css" />
      <option name="checkSyntaxErrors" value="true" />
      <option name="description" value="style.less files into style.css files ($ProjectFileDir$/sites/all/libraries/lessphp/bin)" />
      <option name="exitCodeBehavior" value="ERROR" />
      <option name="fileExtension" value="less" />
      <option name="immediateSync" value="false" />
      <option name="name" value="style.less" />
      <option name="output" value="" />
      <option name="outputFilters">
        <array>
          <FilterInfo>
            <option name="description" value="lessc error format" />
            <option name="name" value="lessc" />
            <option name="regExp" value="$MESSAGE$$FILE_PATH$?:$LINE$:$COLUMN$" />
          </FilterInfo>
        </array>
      </option>
      <option name="outputFromStdout" value="false" />
      <option name="passParentEnvs" value="true" />
      <option name="program" value="/opt/bin/lessc" />
      <option name="scopeName" value="style.less" />
      <option name="trackOnlyRoot" value="false" />
      <option name="workingDir" value="$FileParentDir$" />
      <envs>
        <env name="LESS_FILE" value="$FilePath$" />
      </envs>
    </TaskOptions>
  </component>
</application>